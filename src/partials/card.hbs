<div class="photo-card">
    <a class="gallery__item" href="{{largeImageURL}}">
    <img class="pic" src="{{webformatURL}}" alt="{{tags}}" width="370" height="250" loading="lazy" />
    </a>
    <div class="info">
        <p class="info-item">
            <b>Likes: {{likes}}</b>
        </p>
        <p class="info-item">
            <b>Views: {{views}}</b>
        </p>
        <p class="info-item">
            <b>Comments: {{comments}}</b>
        </p>
        <p class="info-item">
            <b>Downloads: {{downloads}}</b>
        </p>
    </div>
</div>